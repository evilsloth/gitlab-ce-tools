{
  "name": "gitlab-ce-tools",
  "version": "0.14.2",
  "description": "Additional tools for Gitlab CE",
  "author": "evilsloth",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build --base-href \"\" && electron .",
    "electron-pack": "ng build --base-href \"\" && electron-builder --dir",
    "electron-dist": "ng build --base-href \"\" && electron-builder -wl -c.snap.publish=github"
  },
  "build": {
    "productName": "Gitlab CE Tools",
    "appId": "com.github.gitlab-ce-tools",
    "artifactName": "gitlab-ce-tools.${version}.${ext}",
    "files": [
      "main.js",
      "dist/gitlab-ce-tools/**/*"
    ],
    "directories": {
      "output": "dist/electron"
    },
    "linux": {
      "category": "Development"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^10.1.0",
    "@angular/common": "^10.1.0",
    "@angular/compiler": "^10.1.0",
    "@angular/core": "^10.1.0",
    "@angular/forms": "^10.1.0",
    "@angular/platform-browser": "^10.1.0",
    "@angular/platform-browser-dynamic": "^10.1.0",
    "@angular/router": "^10.1.0",
    "@clr/angular": "^4.0.1",
    "@clr/core": "^4.0.1",
    "@clr/icons": "^4.0.1",
    "@clr/ui": "^4.0.1",
    "electron-log": "^3.0.9",
    "electron-store": "^6.0.0",
    "electron-updater": "^4.3.4",
    "@ng-select/ng-select": "^4.0.0",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "core-js": "^2.6.11",
    "ngx-ace-wrapper": "^8.0.0",
    "rxjs": "^6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1001.0",
    "@angular/cli": "^10.1.0",
    "@angular/compiler-cli": "^10.1.0",
    "@angular/language-service": "^10.1.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.11.1",
    "@types/prismjs": "^1.16.0",
    "codelyzer": "^5.1.2",
    "electron": "^8.5.1",
    "electron-builder": "^22.8.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~3.9.7"
  }
}
